@{
    ViewData["Title"] = "Вход";
}

<div class="text-center border-warning border">
    <h1 class="display-4">Вход</h1>
</div>
<div>
    <form method="post" asp-controller="LoginPageController" asp-action="onTapLogin">
        <div class="form-group">
            <label for="exampleInputLogin1">Логин</label>
            <input type="text" name="login" class="form-control" id="exampleInputLogin1" aria-describedby="loginlHelp" placeholder="Введите логин">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Пароль</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Введите пароль">
        </div>
        <p class="error">@ViewData["error"]</p>
        <button class="btn btn-primary" asp-action="onTapLogin">Войти</button>
        <button class="btn btn-primary" asp-action="onTapRegistration">Регистрация</button>
    </form>
</div>
<style>
.error{
    color:red;
}
</style>