@{
    ViewData["Title"] = "Таблица";
}
<div class="text-center border-warning border">
    @if (ViewData["loginUser"] != null)
    {
        <h1 class="display-4">@((ViewData["loginUser"] as Person ).FullName )</h1>
    }
</div>
<div class="border-warning border">
    <form method="post" asp-controller="HomeController">
        <button class="btn btn-primary" value='ViewData["records"]' asp-action="onTapBlock">Заблокировать</button>
        <button class="btn btn-primary" value='ViewData["records"]' asp-action="onTapUNBlock">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M11.5 8h-7a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1zm-7-1a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7zm0-3a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
            </svg>
        </button>
        <button class="btn btn-primary" value=@ViewData["records"] asp-action="onTapDelete">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
            </svg>
        </button>
    </form>
    
</div>
<div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>
                    <form method="post" asp-controller="HomeController">
                        <button type="submit" class="btn btn-outline-secondary" name="value" asp-action="onChange">@ViewData["btn_text"]</button>
                    </form>
                </th>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Дата регистрации</th>
                <th>Последняя дата входа</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Record record in (ViewData["records"] as List<Record>))
            {
                <tr>
                    <th>
                        <form asp-controller="HomeController">
                            <input id="Checkbox1" type="checkbox" onchange="@record.user.Information.Status = !@record.user.Information.Status" asp-for="@record.select" />
                        </form>
                    </th>
                    <th scope="row">@record.user.ID</th>
                    <th scope="row">@record.user.Information.FirstName</th>
                    <th scope="row">@record.user.Information.LastName</th>
                    <th scope="row">@record.user.Information.Email</th>
                    <th scope="row">@record.user.Information.DateRegistr.ToShortDateString()</th>
                    <th scope="row">@record.user.Information.LastLogin.ToShortDateString()</th>
                    <th scope="row">@record.user.StringStatus</th>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <button class="btn btn-primary" asp-action="onTapExit">Выход</button>
</div>

